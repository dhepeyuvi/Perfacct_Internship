{
    "files.watcherExclude": {
        "**/.cache/**": true,
        "**/public/**": true
    },
    "editor.minimap.maxColumn": 79,
    "editor.wordWrap": "bounded",
    "editor.wrappingIndent": "indent",
    "editor.tabSize": 4,
    "editor.rulers": [
        79
    ],
    "rewrap.autoWrap.enabled": true,
    "rewrap.wrappingColumn": 79,
    "files.trimTrailingWhitespace": true,
    "[python]": {
        "editor.formatOnType": true,
        "editor.defaultFormatter": "ms-python.black-formatter",
    },
    "black-formatter.args": [
        "--line-length=79"
    ],
    "flake8.args": [
        "--max-line-length=79",
        "--ignore=E203,",
        "--verbose"
    ],
    "editor.formatOnSave": true,
    "notebook.formatOnSave.enabled": true,
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    "python.testing.pytestArgs": [
        "tests",
        "--capture=no",
        "--log-cli-level=DEBUG"
    ],
    "workbench.colorCustomizations": {
        "activityBar.activeBorder": "#df0000",
        "activityBar.activeBackground": "#0000d3",
        "activityBar.background": "#0000d3",
        "activityBar.foreground": "#e7e7e7",
        "activityBar.inactiveForeground": "#e7e7e799",
        "activityBarBadge.background": "#df0000",
        "activityBarBadge.foreground": "#e7e7e7",
        "commandCenter.border": "#e7e7e799",
        "sash.hoverBorder": "#0000d3",
        "statusBar.background": "#0000a0",
        "statusBar.foreground": "#e7e7e7",
        "statusBarItem.hoverBackground": "#0000d3",
        "statusBarItem.remoteBackground": "#0000a0",
        "statusBarItem.remoteForeground": "#e7e7e7",
        "titleBar.activeBackground": "#0000a0",
        "titleBar.activeForeground": "#e7e7e7",
        "titleBar.inactiveBackground": "#0000a099",
        "titleBar.inactiveForeground": "#e7e7e799"
    },
    "peacock.remoteColor": "#0000a0",
    "files.autoSave": "afterDelay",
    "continue.telemetryEnabled": false,
}